<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F0DA">
    <View
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@drawable/home2"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_top"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_set"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/set"
        android:layout_margin="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_top"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:src="@drawable/app_lock"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_set"
        app:layout_constraintBottom_toBottomOf="@id/iv_set" />
    <View
        android:id="@+id/view_tab_bg"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_ec6d25_8dp"
        app:layout_constraintTop_toBottomOf="@id/iv_set"/>
    <View
        android:id="@+id/view_tab_line"
        android:layout_width="0.5dp"
        android:layout_height="25dp"
        android:background="#5EFFEA44"
        app:layout_constraintTop_toTopOf="@id/view_tab_bg"
        app:layout_constraintLeft_toLeftOf="@id/view_tab_bg"
        app:layout_constraintRight_toRightOf="@id/view_tab_bg"
        app:layout_constraintBottom_toBottomOf="@id/view_tab_bg"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_locked"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:textSize="16sp"
        android:text="Locked Apps"
        android:textColor="@drawable/applock_tab_color_selector"
        app:layout_constraintTop_toTopOf="@id/view_tab_bg"
        app:layout_constraintLeft_toLeftOf="@id/view_tab_bg"
        app:layout_constraintBottom_toBottomOf="@id/view_tab_bg"
        app:layout_constraintRight_toRightOf="@id/view_tab_line"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_install"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:textSize="16sp"
        android:text="Installed Apps"
        android:textColor="@drawable/applock_tab_color_selector"
        app:layout_constraintTop_toTopOf="@id/view_tab_bg"
        app:layout_constraintLeft_toLeftOf="@id/view_tab_line"
        app:layout_constraintBottom_toBottomOf="@id/view_tab_bg"
        app:layout_constraintRight_toRightOf="@id/view_tab_bg"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/view_tab_bg"
        app:layout_constraintBottom_toTopOf="@id/bottom"/>
    <View
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>