<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F0DA">
    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_country_bg"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/country_bg"
        android:layout_margin="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_view"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/server_home_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_set"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_set"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/set"
        android:layout_margin="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_view"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_country"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/fast"
        app:layout_constraintTop_toTopOf="@id/iv_country_bg"
        app:layout_constraintLeft_toLeftOf="@id/iv_country_bg"
        app:layout_constraintRight_toRightOf="@id/iv_country_bg"
        app:layout_constraintBottom_toBottomOf="@id/iv_country_bg" />
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="126dp"
        android:src="@drawable/server_home_center"
        app:layout_constraintTop_toTopOf="@id/iv_set"/>
    <ProgressBar
        android:id="@+id/connect_progress"
        android:layout_width="230dp"
        android:layout_height="56dp"
        android:progress="0"
        android:layout_marginBottom="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_view"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/server_home_progress"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_connect_status"
        android:layout_width="230dp"
        android:layout_height="56dp"
        android:text="Connect"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/connect_progress"
        app:layout_constraintLeft_toLeftOf="@id/connect_progress"
        app:layout_constraintRight_toRightOf="@id/connect_progress"
        app:layout_constraintBottom_toBottomOf="@id/connect_progress"
        />
    <View
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>