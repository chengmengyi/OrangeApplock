<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F0DA">
    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/back"
        android:layout_margin="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_view"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#EC6D25"
        android:text="Connect success"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/back"
        app:layout_constraintBottom_toBottomOf="@id/back"/>
    <View
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="207dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_fff_12dp"
        app:layout_constraintTop_toBottomOf="@id/back"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_result_bg"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/result_selector"
        app:layout_constraintTop_toTopOf="@id/bg"
        app:layout_constraintLeft_toLeftOf="@id/bg"
        app:layout_constraintRight_toRightOf="@id/bg"
        app:layout_constraintBottom_toBottomOf="@id/bg"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#42556B"
        android:layout_marginTop="50dp"
        android:text="The connection time"
        app:layout_constraintTop_toTopOf="@id/bg"
        app:layout_constraintLeft_toLeftOf="@id/bg"
        app:layout_constraintRight_toRightOf="@id/bg"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_result_connect_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="38sp"
        android:text="00:00:00"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/bg"
        app:layout_constraintRight_toRightOf="@id/bg"
        app:layout_constraintTop_toBottomOf="@id/tv"
        android:textColor="@drawable/result_connect_time_color_selector"/>
</androidx.constraintlayout.widget.ConstraintLayout>